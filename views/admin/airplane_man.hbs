<table class="table">
    <thead>
        <tr>
            <th scope="col">항공기 ID</th>
            <th scope="col">좌석 수</th>
            <th scope="col">항공기 분류</th>
        </tr>
    </thead>

    <tbody>


            {{#each airplane}}
        <form method="post" action="/admin/airplane_info/edit">
            <tr>
                <th scope="row">
                    {{airplane_id}}
                    <input type="hidden" name="airplane_id" value={{airplane_id}}>
                </th>
                <td><input type="text" name="seats" value={{total_number_of_seats}}></td>
                <td>
                    {{airplane_type}}
                    <input type="hidden" name="type" value={{airplane_type}}>
                </td>
                <td>
                    <button class="btn btn-secondary btn-sm" name='editBtn' type="submit"
                        value="{{airplane_id}}">수정</button>
                    <button class="btn btn-danger btn-sm" name='delBtn' type="submit"
                        value="{{airplane_id}}">삭제</button>
                </td>
            </tr>
        </form>
            {{/each}}
        <form method="post" action="/admin/airplane_info/edit">
            <tr>
                <th scope="row"><input type="text" name="set" placeholder="항공기ID"></th>
                <td><input type="text" name="set" placeholder="좌석 수"></td>
                <td><input type="text" name="set" placeholder="항공기 분류"></td>
                <td>
                    <button class="btn btn-secondary btn-sm" name='insertBtn' type="submit">추가</button>
                </td>
            </tr>
        </form>

    </tbody>
</table>

