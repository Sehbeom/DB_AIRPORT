<table class="table">
    <thead>
        <tr>
            <th scope="col">공항 코드</th>
            <th scope="col">공항 이름</th>
            <th scope="col">위치(City)</th>
            <th scope="col">위치(State)</th>
        </tr>
    </thead>

    <tbody>
            {{#each airport}}
        <form method="post" action="/admin/airport_info/edit">
            <tr>
                <th scope="row">
                    {{airport_code}}
                    <input type="hidden" name="airport_code" value={{airport_code}}></th>
                <td><input type="text" name="name" value={{name}}></td>
                <td><input type="text" name="city" value={{city}}></td>
                <td><input type="text" name="state" value={{state}}></td>
                <td>
                    <button class="btn btn-secondary btn-sm" name='editBtn' type="submit"
                        value="{{airport_code}}">수정</button>
                    <button class="btn btn-danger btn-sm" name='delBtn' type="submit"
                        value="{{airport_code}}">삭제</button>
                </td>
            </tr>
        </form>

            {{/each}}
        <form method="post" action="/admin/airport_info/edit">
            <tr>
                <th scope="row"><input type="text" name="set" placeholder="공항코드"></th>
                <td><input type="text" name="set" placeholder="공항이름"></td>
                <td><input type="text" name="set" placeholder="위치(city)"></td>
                <td><input type="text" name="set" placeholder="위치(state)"></td>
                <td>
                    <button class="btn btn-secondary btn-sm" name='insertBtn' type="submit">추가</button>
                </td>
            </tr>
        </form>


    </tbody>
</table>

